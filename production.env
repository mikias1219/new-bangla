# BanglaChatPro Production Environment Configuration
# Copy this file to .env and update the values

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=bdchatpro.com,www.bdchatpro.com,localhost,127.0.0.1

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite3

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# Static Files Configuration
STATIC_URL=/static/
STATIC_ROOT=/var/www/bangla-chat-pro/static/
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/bangla-chat-pro/media/

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# CORS Settings
CORS_ALLOWED_ORIGINS=[
    "https://bdchatpro.com",
    "https://www.bdchatpro.com",
    "http://localhost:3000",
    "http://127.0.0.1:3000"
]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/bangla-chat-pro/django.log

# Cache Configuration (Optional - Redis)
CACHE_URL=redis://localhost:6379/1

# Celery Configuration (Optional - for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Twilio Configuration (Optional - for SMS/Voice)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Stripe Configuration (Optional - for payments)
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Social Media API Keys (Optional)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# Monitoring and Analytics (Optional)
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760  # 10MB
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760  # 10MB

# Session Configuration
SESSION_COOKIE_AGE=86400  # 24 hours
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict

# CSRF Configuration
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_HTTPONLY=True
CSRF_COOKIE_SAMESITE=Strict

# Admin Configuration
ADMIN_EMAIL=admin@bdchatpro.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Production Server Configuration
SERVER_NAME=bdchatpro.com
SERVER_PORT=8000
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120
GUNICORN_KEEPALIVE=5

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=100

# Feature Flags
ENABLE_VOICE_FEATURES=True
ENABLE_SOCIAL_MEDIA=True
ENABLE_ANALYTICS=True
ENABLE_NOTIFICATIONS=True
ENABLE_BACKUP=True

# Performance Settings
CONN_MAX_AGE=600
CONN_MAX_AGE_DEFAULT=600
CONN_MAX_AGE_DATABASE=600

# Memory Settings
PYTHON_MEMORY_LIMIT=512MB
DJANGO_MEMORY_LIMIT=256MB

# Timezone
TIME_ZONE=Asia/Dhaka
USE_TZ=True

# Language Settings
LANGUAGE_CODE=bn
USE_I18N=True
USE_L10N=True

# Additional Django Settings
DEFAULT_AUTO_FIELD=django.db.models.BigAutoField
USE_THOUSAND_SEPARATOR=True
NUMBER_GROUPING=3

# API Settings
API_RATE_LIMIT=1000
API_TIMEOUT=30
API_RETRY_ATTEMPTS=3

# Webhook Settings
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_SECRET_KEY=your-webhook-secret-key

# Monitoring Settings
HEALTH_CHECK_ENABLED=True
METRICS_ENABLED=True
PERFORMANCE_MONITORING=True

# Development vs Production
ENVIRONMENT=production
VERSION=1.0.0
BUILD_DATE=2024-01-01
COMMIT_HASH=latest
